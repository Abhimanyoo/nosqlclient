{
  "private": true,
  "name": "nosqlclient-server",
  "version": "4.0.0",
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "scripts": {
    "postinstall": "cd client && npm install",
    "client": "cd client && npm start",
    "server": "cd server && nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  }
}
